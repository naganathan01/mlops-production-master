{
  "dashboard": {
    "id": null,
    "title": "ML Model Performance Dashboard",
    "tags": ["ml", "production"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(ml_requests_total[5m]))",
            "legendFormat": "Requests/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps"
          }
        }
      },
      {
        "id": 2,
        "title": "Error Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(ml_requests_total{status=\"error\"}[5m])) / sum(rate(ml_requests_total[5m])) * 100",
            "legendFormat": "Error Rate %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Response Time (95th percentile)",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(ml_request_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, sum(rate(ml_request_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "50th percentile"
          }
        ]
      },
      {
        "id": 4,
        "title": "Prediction Distribution",
        "type": "histogram",
        "targets": [
          {
            "expr": "sum(rate(ml_prediction_values_bucket[5m])) by (le)",
            "legendFormat": "Predictions"
          }
        ]
      },
      {
        "id": 5,
        "title": "Model Version Usage",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum(ml_requests_total) by (model_version)",
            "legendFormat": "{{model_version}}"
          }
        ]
      }
    ]
  }
}